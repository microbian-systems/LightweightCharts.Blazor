@page "/barSeries"
@rendermode Configuration.RenderMode

@using LightweightCharts.Blazor.Charts

<PageTitle>Live Bar Series & Timescale Formatter</PageTitle>

<ChartComponent @ref=ChartComponent />

<script>
	function customTimeScaleTickMarkFormatter(time, type, locale) {
		var date = new Date(time * 1000);
		return date.toLocaleString(locale, { day: 'numeric', month: 'short' });
	}
</script>
