<Project Sdk="Microsoft.NET.Sdk.Razor">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<PackageId>LightweightCharts.Blazor</PackageId>
		<PackageVersion>3.8.0</PackageVersion>
		<Authors>Laurentiu Cernescu</Authors>
		<Description>Blazor wrapper for TradingView's Lightweight charts.</Description>
		<!--<Copyright>?</Copyright>-->
		<PackageProjectUrl>https://github.com/mr-azazael/LightweightCharts.Blazor</PackageProjectUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<RepositoryUrl>https://github.com/mr-azazael/LightweightCharts.Blazor</RepositoryUrl>
		<PackageTags>Blazor;TradingView;Financial;Charts</PackageTags>
		<PackageReleaseNotes>First release</PackageReleaseNotes>
		<Version>$(PackageVersion)</Version>
		<PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
		<PackageIcon>logo.png</PackageIcon>
	</PropertyGroup>

	<ItemGroup>		
		<None Include="..\..\README.md" Pack="True" PackagePath=""/>
		<None Include="..\..\resources\logo.png" Pack="True" PackagePath=""/>
		<None Include="LICENSE.txt" Pack="True" PackagePath=""/>
	</ItemGroup>

	<ItemGroup>
		<SupportedPlatform Include="browser" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.2" />
	</ItemGroup>

</Project>
